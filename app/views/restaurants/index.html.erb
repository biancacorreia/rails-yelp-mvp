<h1>All Restaurants</h1>

<%= link_to "Add New Restaurant", new_restaurant_path, class: "btn" %>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <strong><%= link_to restaurant.name, restaurant_path(restaurant) %></strong>
      - <%= restaurant.category.capitalize %>
      <br>
      <%= restaurant.address %>
      <br>
      <%= link_to "Edit", edit_restaurant_path(restaurant) %> |
      <%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
